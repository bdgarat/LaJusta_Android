<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lajusta">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcherlajusta"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcherlajusta_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaJusta"
        android:usesCleartextTraffic="true">
        <activity android:name=".ActivityMostrarCarrito"
            android:theme="@style/Theme.LaJusta.NoActionBar" ></activity>
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityBienvenida">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityTicket" />
        <activity
            android:name=".ActivityCompra"
            android:label="@string/title_activity__inicio"
            android:theme="@style/Theme.LaJusta.NoActionBar" />
        <activity android:name=".ActivitySignUp" />
        <activity android:name=".ActivityMain"
            android:theme="@style/Theme.LaJusta.NoActionBar"/>
        <activity android:name=".ActivityReceta" />
        <activity android:name=".ActivityMasInfo"/>
        <activity android:name=".ActivityMapaNodos"/>
        <activity android:name=".ActivityPerfil"/>
    </application>

</manifest>