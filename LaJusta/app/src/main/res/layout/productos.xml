<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_productos">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombreProducto"
            android:id="@+id/nombreNodo"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/precio"
            android:text="@string/precioProducto"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descripcionNodo"
            android:text="@string/descripcionProducto"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/botonRestar"
                android:background="#94FF0000"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/sharp_remove_black_36"
                android:text="@string/botonResta"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cantidadProducto"
                android:layout_width="40dp"
                android:layout_marginLeft="20sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/cantidadProducto"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/botonSumar"
                android:background="#8600FF37"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:src="@drawable/sharp_add_black_36"
                android:text="@string/botonSuma"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>