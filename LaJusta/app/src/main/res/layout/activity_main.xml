<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ActivityCompra">

    <ImageView
    android:id="@+id/logoLaJusta"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="20dp"
    android:src="@mipmap/lajustalogoconaclaracion">

</ImageView>

    <Button
        android:id="@+id/botonComprar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="@string/botonComprar"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonRecetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="@string/botonBuscarRecetas"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/botonMasInformacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="@string/botonMasInformacion"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>