<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_productos">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombreProducto"
            android:id="@+id/nombreReceta"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingredientes"
            android:text="Ingredientes"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tiempoPreparacion"
            android:text="Tiempo de preparacion"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preparacionReceta"
            android:text="Pasos para preparacion"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>