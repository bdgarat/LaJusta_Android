<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ActivityCompra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNombreUsuario"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No registrado"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botonIniciarSesion"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Iniciar Sesion"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/botonVerPerfilUsuario"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ver Perfil"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoLaJusta"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/lajustalogopositivonegro">

        </ImageView>

        <Button
            android:id="@+id/botonComprar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:padding="10dp"
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonRecetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:padding="10dp"
            android:text="@string/botonBuscarRecetas"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botonMasInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:padding="10dp"
            android:text="@string/botonMasInformacion"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>